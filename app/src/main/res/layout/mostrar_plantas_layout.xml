<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MostrarPlantasActivity">


    <ImageView
        android:id="@+id/imgRecebePlanta"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/azedinha" />

    <TextView
        android:id="@+id/txtRecebeNomePlanta"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:text="Também chamada de erva-vinagreira, é uma das PANCs mais famosas. Ela possui um sabor ácido característico e seu consumo pode ser tanto cru quanto cozido, em sucos, saladas, refogados, massas e sopas."
        android:textColor="#000"
        android:textSize="19dp"
        android:textStyle="bold" />

</LinearLayout>